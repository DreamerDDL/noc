<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="nocd">
    <service name="application/nocd" type="service" version="1">
        <create_default_instance enabled='true' />
        <single_instance />
        <instance name="nocd" enabled="false">
            <dependency name='loopback'
                grouping='require_all'
                restart_on='error'
                type='service'>
                    <service_fmri value='svc:/network/loopback:default'/>
            </dependency>
            <dependency name='physical'
                grouping='optional_all'
                restart_on='error'
                type='service'>
                    <service_fmri value='svc:/network/physical:default'/>
            </dependency>
            <dependency name='multiuser-server'
                grouping='require_all'
                restart_on='error'
                type='service'>
                    <service_fmri value='svc:/milestone/multi-user-server:default'/>
            </dependency>
            <exec_method type="method" name="start"   exec="/var/www/noc/scripts/nocd start"   timeout_seconds='60' />
            <exec_method type="method" name="stop"    exec="/var/www/noc/scripts/nocd stop"    timeout_seconds='60' />
            <exec_method type="method" name="refresh" exec="/var/www/noc/scripts/nocd refresh" timeout_seconds='60' />
            <method_context>
                <method_credential user="nocd" group="nocd" />
                <method_environment>
                    <envvar name="PATH" value="/opt/csv/bin:/usr/bin:/bin"/>
                </method_environment>
            </method_context>
            <property_group name="nocd" type="framework">
                <stability value="Evolving"/>
                <propval name="python"      type="astring" value="/opt/csw/bin/python" />
                <propval name="prefix"      type="astring" value="/var/www/noc" />
                <propval name="socket"      type="astring" value="/tmp/nocd.fcgi" />
                <propval name="minspare"    type="integer" value="2" />
                <propval name="maxspare"    type="integer" value="5" />
                <propval name="maxrequests" type="integer" value="100" />
                <propval name="maxchildren" type="integer" value="30" />
                <propval name="pidfile"     type="astring" value="/var/run/nocd-fastcgi.pid" />
            </property_group>
        </instance>
        <template>
            <common_name>
                <loctext xml:lang='C'>
                    NOC FastCGI backend
                </loctext>
            </common_name>
        </template>
    </service>
</service_bundle>