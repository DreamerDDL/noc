                "body_template": "BGP Peer {{peer}}(AS{{as}}) state changed: {{from_state}} -> {{to_state}}",
                "symptoms": "",
                "probable_causes": "",
                "recommended_actions": ""
            }
        },
        "vars": [
            {
                "name": "peer",
                "description": "Peer",
                "type": "ip_address",
                "required": true
            },
            
            {
                "name": "as",
                "description": "Peer AS",
                "type": "int",
                "required": true
            },
            
            {
                "name": "from_state",
                "description": "Initial state",
                "type": "str",
                "required": true
            },
            
            {
                "name": "to_state",
                "description": "Final state",
                "type": "str",
                "required": true
            }

        ],
        "disposition": [
            {
                "name": "raise",
