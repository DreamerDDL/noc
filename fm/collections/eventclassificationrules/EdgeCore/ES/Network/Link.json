[
    {
        "name": "EdgeCore | ES | Network | Link | Link Down (SYSLOG)",
        "description": "Unit 1, Port 25 link-down notification.",
        "event_class__name": "Network | Link | Link Down",
        "preference": 1000,
        "patterns": [
            {
                "key_re": "^source$",
                "value_re": "^syslog$"
            },
            {
                "key_re": "^profile$",
                "value_re": "^EdgeCore\\.ES$"
            },
            {
                "key_re": "^message$",
                "value_re": "Unit (?P<unit>\\S+), Port\\s+(?P<port>\\d+) link-down notification\\.$"
            }
        ],
        "vars": [
            {
                "name": "interface",
                "value": "='Eth %s/%s' % (unit, port)" 
            }
        ]
    },

    {
        "name": "EdgeCore | ES | Network | Link | Link Up (SYSLOG)",
        "description": "Unit 1, Port  1 link-up 100M FD notification.",
        "event_class__name": "Network | Link | Link Up",
        "preference": 1000,
        "patterns": [
            {
                "key_re": "^source$",
                "value_re": "^syslog$"
            },
            {
                "key_re": "^profile$",
                "value_re": "^EdgeCore\\.ES$"
            },
            {
                "key_re": "^message$",
                "value_re": "Unit (?P<unit>\\S+), Port\\s+(?P<port>\\d+) link-up\\s*(?P<speed>10M|100M|1G)\\s*(?P<duplex>FD|HD)? notification\\.$"
            }
        ],
        "vars": [
            {
                "name": "interface",
                "value": "='Eth %s/%s' % (unit, port)" 
            }
        ]
    },

    {
        "name": "EdgeCore | ES | Network | Link | Link Down (SNMP)",
        "description": "IF-MIB::linkDown",
        "event_class__name": "Network | Link | Link Down",
        "preference": 1000,
        "patterns": [
            {
                "key_re": "^source$",
                "value_re": "^SNMP Trap$"
            },
            {
                "key_re": "^profile$",
                "value_re": "^EdgeCore\\.ES$"
            },
            {
                "key_re": "^IF-MIB::ifIndex\\.\\d+$",
                "value_re": "^(?P<interface>\\d+)$"
            },
            {
                "key_re": "^SNMPv2-MIB::snmpTrapOID\\.0$",
                "value_re": "^IF-MIB::linkDown$"
            }
        ]
    },

    {
        "name": "EdgeCore | ES | Network | Link | Link Up (SNMP)",
        "description": "IF-MIB::linkUp",
        "event_class__name": "Network | Link | Link Up",
        "preference": 1000,
        "patterns": [
            {
                "key_re": "^source$",
                "value_re": "^SNMP Trap$"
            },
            {
                "key_re": "^profile$",
                "value_re": "^EdgeCore\\.ES$"
            },
            {
                "key_re": "^IF-MIB::ifIndex\\.\\d+$",
                "value_re": "^(?P<interface>\\d+)$"
            },
            {
                "key_re": "^SNMPv2-MIB::snmpTrapOID\\.0$",
                "value_re": "^IF-MIB::linkUp$"
            }
        ]
    }
]
