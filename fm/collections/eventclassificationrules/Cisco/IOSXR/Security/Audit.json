[
    {
        "name": "Cisco | IOSXR | Security | Audit | Command #1 (SYSLOG)",
        "description": "%OS-SYSMGR-4-PROC_RESTART_NAME : User cisco (vty1) requested a restart of process msdp at 0/RSP0/CPU0",
        "event_class__name": "Security | Audit | Command",
        "preference": 1000,
        "vars": [
            {
                "name": "command",
                "value": "process restart msdp"
            }
        ],
        "patterns": [
            {
                "key_re": "^source$",
                "value_re": "^syslog$"
            },
            {
                "key_re": "^profile$",
                "value_re": "^Cisco\\.IOSXR$"
            },
            {
                "key_re": "^message$",
                "value_re": "%OS-SYSMGR-4-PROC_RESTART_NAME : User (?P<user>.+) \\(vty\\d+\\) requested a restart of process msdp at .+"
            }
        ]
    },

    {
        "name": "Cisco | IOSXR | Security | Audit | Clearing Counters (SYSLOG)",
        "description": "%MGBL-IFSTATS-6-CLEAR_COUNTERS : Clear counters on TenGigE0/0/1/2",
        "event_class__name": "Security | Audit | Clearing Counters",
        "preference": 1000,
        "patterns": [
            {
                "key_re": "profile",
                "value_re": "Cisco.IOSXR"
            },
            {
                "key_re": "source",
                "value_re": "syslog"
            },
            {
                "key_re": "message",
                "value_re": "%MGBL-IFSTATS-6-CLEAR_COUNTERS : Clear counters on (?P<iface>.+)"
            }
        ],
        "vars": [
            {
                "name": "command",
                "value": "='clear counter interface %s' % iface"
            }
        ]
    },

    {
        "name": "Cisco | IOSXR | Security | Audit | Command #2 (SYSLOG)",
        "description": "%PKT_INFRA-LINK-5-CHANGED : Interface TenGigE0/0/1/1, changed state to Administratively Down",
        "event_class__name": "Security | Audit | Command",
        "preference": 1000,
        "patterns": [
            {
                "key_re": "profile",
                "value_re": "Cisco.IOSXR"
            },
            {
                "key_re": "source",
                "value_re": "syslog"
            },
            {
                "key_re": "message",
                "value_re": "%PKT_INFRA-LINK-5-CHANGED : Interface (?P<iface>.+), changed state to Administratively Down$"
            }
        ],
        "vars": [
            {
                "name": "command",
                "value": "='interface %s shutdown' % iface"
            }
        ]
    }
]
