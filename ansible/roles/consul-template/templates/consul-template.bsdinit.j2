#!/bin/sh

# PROVIDE: consul-template
# REQUIRE: LOGIN
# KEYWORD: shutdown

# shellcheck disable=SC1091
. /etc/rc.subr

name="consul-template"
# shellcheck disable=2034
rcvar=$(set_rcvar)


load_rc_config $name
# shellcheck disable=2154
: "${consul_enable="NO"}"
# shellcheck disable=2154
: "${consul_users="consul"}"

# shellcheck disable=2034
restart_cmd=consul_template_restart
# shellcheck disable=2034
start_cmd=consul_template_start
# shellcheck disable=2034
stop_cmd=consul_template_stop

consul_template_start() {
    echo "Starting ${name}."
    for user in ${consul_users}; do
        mkdir /var/run/consul
        chown -R "{{ consul_user }}:{{ consul_group }}" /var/run/consul/
        su -m "${user}" -c "{{ consul_template_bin_path }}/consul-template agent -config-file={{ consul_config_path }}/config.json -config-dir={{ consul_configd_path }} -pid-file=/var/run/consul/consul-template.pid&"
    done
}

consul_template_stop() {
    echo "Stopping $name."
    pids=$(pgrep consul)
    pkill consul-template
    wait_for_pids "${pids}"
}

consul_template_restart() {
    consul_template_stop
    consul_template_start
}

run_rc_command "$1"
